{
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "swc": true
  },
  "compilerOptions": {
    "incremental": true,
    "target": "ES2016",
    "lib": ["es6"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@middlewares": ["src/middlewares"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@controllers": ["src/controllers"],
      "@controllers/*": ["src/controllers/*"],
      "@routers": ["src/routers"],
      "@routers/*": ["src/routers/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@database": ["src/database"],
      "@database/*": ["src/database/*"],
      "@ctypes": ["src/types"],
      "@ctypes/*": ["src/types/*"],
      "@misc": ["src/misc"],
      "@misc/*": ["src/misc/*"],
      "@factory": ["src/factory"],
      "@factory/*": ["src/factory/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist/esm",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "declarationDir": "server-types"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "server-types"]
}
